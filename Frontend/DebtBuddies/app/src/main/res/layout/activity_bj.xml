<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_dark_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/id_card5"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="80dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_card4"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="120dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>


    <ImageView
        android:id="@+id/id_card3"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="160dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_card2"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="200dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_card"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="260dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_dealer1"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="260dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_dealer2"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="220dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_dealer3"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="180dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_dealer4"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="140dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>

    <ImageView
        android:id="@+id/id_dealer5"

        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="100dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/cardback"></ImageView>



    <Button
        android:id="@+id/b_deal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="75dp"
        android:onClick="onDealClicked"
        android:text="HIT"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b_double"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="75dp"
        android:onClick="onDoubleClicked"
        android:text="DOUBLE"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b_stand"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="75dp"
        android:onClick="onStandClicked"
        android:text="STAND"
        android:textSize="20sp" />


    <Button
        android:id="@+id/b_replay"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="198dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="380dp"
        android:onClick="onReplayClicked"
        android:text="REPLAY"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dealer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="32sp"
            android:text="0"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/tv_player"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="32sp"
            android:text="0"
            android:textColor="#FFFFFFFF"
            android:gravity="center"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="32sp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="164dp"
        android:textColor="#FFFFFFFF"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="243dp"
        android:text="Balance"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="0dp"
        android:text="Bet"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />


</RelativeLayout>